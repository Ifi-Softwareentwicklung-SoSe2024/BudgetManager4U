<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BudgetManager4U.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BudgetManager4U.Views"
    Title="BudgetManager4U">



    <FlyoutItem Title="Account" >
        <ShellContent Title="Account"
                    ContentTemplate="{DataTemplate views:MainPage}"
                    Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Expenses" >
        <ShellContent Title="Expenses"
                ContentTemplate="{DataTemplate views:ExpensesPage}"
                Route="ExpensesPage" />
    </FlyoutItem>
    <FlyoutItem Title="Incomes" >
        <ShellContent Title="Incomes"
             ContentTemplate="{DataTemplate views:IncomesPage}"
             Route="IncomesPage" />
    </FlyoutItem>


</Shell>
