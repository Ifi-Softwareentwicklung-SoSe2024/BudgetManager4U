<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetManager4U.Views.LoginPage"
             Title="Login">


    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto,Auto, Auto, Auto"
       ColumnDefinitions="*,*"
       Padding="40">

        <Label
            Text="Email:" VerticalOptions="Center" Grid.Row="2" Grid.Column="0">
            
        </Label>
        

        <Entry x:Name="EmailInputLog" Placeholder="Enter Email"  Grid.Row="2" Grid.Column="1"/>

        <Label Text="Password:" Grid.Row="3" Grid.Column="0"/>
        <Entry x:Name="PasswordInputLog" Placeholder="Enter password"  IsPassword="True"  Grid.Row="3" Grid.Column="1"/>

        <Button x:Name="SignInLog"   Margin="4" Text="Sign In" Grid.Row="4" Grid.Column="1"/>

        <Label Text="Don't have an account yet?" Grid.Row="5" Grid.Column ="1">
            
        </Label>

        <Label Text=" Sign Up!" Grid.Row="6" TextColor="MediumPurple" Grid.Column ="1">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnUrlClicked"/>
            </Label.GestureRecognizers>
        </Label>








    </Grid>


 
</ContentPage>